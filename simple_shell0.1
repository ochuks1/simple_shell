#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

/**
 * main - Simple shell implementation
 *
 * Return: Always 0
 */
int main(void)
{
    char *buffer = NULL;
    size_t bufsize = 0;
    ssize_t characters;
    pid_t pid;

    while (1)
    {
        printf("$ ");
        characters = getline(&buffer, &bufsize, stdin);
        if (characters == EOF)
        {
            printf("\n");
            break;
        }
        buffer[characters - 1] = '\0'; /* Remove newline character */
        pid = fork();
        if (pid == -1)
        {
            perror("Error");
            exit(EXIT_FAILURE);
        }
        if (pid == 0)
        {
            execlp(buffer, buffer, NULL);
            perror("Error");
            exit(EXIT_FAILURE);
        }
        else
        {
            wait(NULL);
        }
    }
    free(buffer);
    return (0);
}
